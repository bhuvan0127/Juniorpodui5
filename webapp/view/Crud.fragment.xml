<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Dialog
        id="addDialog"
        title="Add Journal Entry">

        <content>
            <VBox class="sapUiSmallMargin">
                <Input id="addCompanyCode" placeholder="Company Code" />
                <Input id="addLedgerGroup" placeholder="Ledger Group" />
                <Input id="addJournalEntryType" placeholder="Journal Entry Type" />
                <Input id="addJournalEntry" placeholder="Journal Entry" />
                <Input id="addDocumentDate" placeholder="Document Date (dd.MM.yyyy)" />
                <Input id="addPeriod" placeholder="Period" />
                <Input id="addFiscalYear" placeholder="Fiscal Year" />
                <DateRangeSelection id="addPostingDate" displayFormat="dd.MM.yyyy"/>
            </VBox>
        </content>

        <beginButton>
            <Button text="Save" press=".onAddSave" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onDialogClose"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
